@model ArtGallery.Models.Customer

@{
    Layout = null;

    var imgURL = !string.IsNullOrEmpty(Model.c_image) ? Model.c_image : string.Empty;
}

<h2 class="text-center">Detail Customer</h2>
<div class="content-wrapper p-5">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <form id="formData" method="post">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Id</label>
                                    <input class="form-control" name="c_id" readonly value="@Model.c_id" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Name</label>
                                    <input class="form-control" name="c_userName" readonly value="@Model.c_userName" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Price</label>
                                    <input type="number" min="1" class="form-control" readonly name="c_phone" value="@Model.c_phone" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Description</label>
                                    <input class="form-control" name="c_dateOfBirth" readonly value="@Model.c_dateOfBirth" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Style of Art</label>
                                    <input class="form-control" name="c_gender" readonly value="@Model.c_gender" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Style of Art</label>
                                    <input class="form-control" name="c_email" readonly value="@Model.c_email" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Date </label>
                                    <input class="form-control" name="c_zip" readonly value="@Model.c_zip" />
                                </div>
                                <br />
                                <div>
                                    <button type="button" id="cancelBtn" class="cancelBtn btn btn-primary" data-id="@Model.c_id">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="thumb">
                                    <img src="@imgURL" class="img-thumbnail img-fluid" alt="Art Image" id="ArtImage" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
   $("#cancelBtn").click(function () {
        $.ajax({
            url: '@Url.Action("CustomerTable", "Admin")'
        })
            .done(function (response) {
                $("#actionContainer").html("");

                foucusAction("tableContainer");
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("FAIL");
            });
    });
</script>