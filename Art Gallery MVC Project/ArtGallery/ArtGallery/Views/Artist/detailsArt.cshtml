@model ArtGallery.Models.Art

@{
    Layout = null;

    var imgURL = !string.IsNullOrEmpty(Model.art_image) ? Model.art_image : string.Empty;
}
    
<h2 class="text-center">Detail Art</h2>
<div class="content-wrapper p-5">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <form id="formData" method="post">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Id</label>
                                    <input class="form-control" name="art_id" readonly value="@Model.art_id" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Name</label>
                                    <input class="form-control" name="art_name" readonly value="@Model.art_name" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Price</label>
                                    <input type="number" min="1" class="form-control" readonly name="art_price" value="@Model.art_price" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Date</label>
                                    <input type="text" min="1" class="form-control" readonly name="art_dateOfCreation" value="@Model.art_dateOfCreation" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Description</label>
                                    <input class="form-control" name="art_description" readonly value="@Model.art_description" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Style of Art</label>
                                    <input class="form-control" name="Art_fk_soA_id" readonly value="@ViewBag.styleOfArt.soA_name" />
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;">Status</label>
                                    @if (Model.art_status == 1)
                                    {
                                        <input class="form-control" name="art_status" readonly value="Active" />
                                    }
                                    else
                                    {
                                        <input class="form-control" name="art_status" readonly value="Deactive" />
                                    }
                                </div>
                                <div class="form-group">
                                    <label style="font-size:15px;font-weight:bold;margin-top:10px;"> Is Auction </label>
                                    <input class="form-control" name="art_isAuction" readonly value="@(Model.art_isAuction == true ? "True" : "False")" />
                                </div>
                                <br />
                                <div>
                                    <button type="button" class="editBtn btn btn-primary" data-id="@Model.art_id">
                                        Edit
                                    </button>
                                    <button type="button" id="cancelBtn" class="cancelBtn btn btn-primary" data-id="@Model.art_id">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="thumb">
                                    <img src="@imgURL" class="img-thumbnail img-fluid" alt="Art Image" id="ArtImage" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(".editBtn").click(function () {
        $.ajax({
            url: '@Url.Action("EditArt", "Artist")',
            data: {
                Id : $(this).attr("data-id")
            }
        })
            .done(function (response) {
                $("#actionContainer").html(response);

                foucusAction("actionContainer");
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("FAIL");
            });
    });
    
   $("#cancelBtn").click(function () {
        $.ajax({
            url: '@Url.Action("ArtsTable", "Artist")'
        })
            .done(function (response) {
                $("#actionContainer").html("");

                foucusAction("tableContainer");
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("FAIL");
            });
    });
</script>