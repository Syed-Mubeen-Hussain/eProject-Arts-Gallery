@model ArtGallery.Models.Contact

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .wrap-contact .error {
        color: red;
        font-weight: 500;
        font-size: 14px;
    }
</style>

<section class="flat-row flat-iconbox">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title-section">
                    <h2 class="title">
                        Get In Touch
                    </h2>
                </div><!-- /.title-section -->
            </div><!-- /.col-md-12 -->
        </div><!-- /.row -->
        <div class="row">
            <div class="col-md-4">
                <div class="iconbox text-center">
                    <div class="box-header nomargin">
                        <div class="icon">
                            <i class="fa fa-map-marker"></i>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-content">
                        <p>Art Gallery Karachi</p>
                    </div><!-- /.box-content -->
                </div><!-- /.iconbox -->
            </div><!-- /.col-md-4 -->
            <div class="col-md-4">
                <div class="divider h0"></div>
                <div class="iconbox text-center">
                    <div class="box-header">
                        <div class="icon">
                            <i class="fa fa-phone"></i>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-content">
                        <p>+23 122 345 678</p>
                    </div><!-- /.box-content -->
                </div><!-- /.iconbox -->
            </div><!-- /.col-md-4 -->
            <div class="col-md-4">
                <div class="divider h0"></div>
                <div class="iconbox text-center">
                    <div class="box-header">
                        <div class="icon">
                            <i class="fa fa-envelope"></i>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-content">
                        <p>ArtGallery@@gmail.com</p>
                    </div><!-- /.box-content -->
                </div><!-- /.iconbox -->
            </div><!-- /.col-md-4 -->
        </div><!-- /.row -->
        <div class="divider h43"></div>
    </div><!-- /.container -->
</section><!-- /.flat-row -->
<section class="flat-row flat-contact">
    <div class="container">
        <div class="row">
            <div class="wrap-contact">
                <form id="formData">
                    <div class="form-text-wrap clearfix">
                        <div class="contact-name clearfix">
                            <label>Name</label>
                            <input autocomplete="off" type="text" onkeypress="return event.keyCode != 13;" size="20" value="" name="cont_name">
                        </div>
                        <div class="contact-email">
                            <label>Email</label>
                            <input autocomplete="off"  type="email" onkeypress="return event.keyCode != 13;" size="30" value="" name="cont_email" id="email">
                        </div>
                        <div class="contact-subject">
                            <label>Subject</label>
                            <input autocomplete="off" type="text" onkeypress="return event.keyCode != 13;" aria-required="true" size="30" value="" name="cont_subject" id="subject">
                        </div>
                    </div>

                    <div class="contact-message clearfix margin-top-40">
                        <label>Message</label>
                        <textarea autocomplete="off" onkeypress="return event.keyCode != 13;" class="" tabindex="4" name="cont_message"></textarea>
                    </div>
                    <div class="form-submit margin-top-32 ">
                        <button class="contact-submit" type="button" id="sendBtn">SEND</button>
                    </div>
                </form>
            </div><!-- /.wrap-contact -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.flat-row -->
