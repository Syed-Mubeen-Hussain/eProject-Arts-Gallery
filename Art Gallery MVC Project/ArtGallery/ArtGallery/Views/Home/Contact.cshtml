<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script>
    $('#formData').validate({

        rules: {
            cont_name: {
                required: true,
                minlength: 3,
                maxlength: 20,
                normalizer: function (value) {
                    return $.trim(value);
                }
            },
            cont_email: {
                required: true,
                minlength: 3,
                email: true,
                maxlength: 20,
                normalizer: function (value) {
                    return $.trim(value);
                }
            },
            cont_subject: {
                required: true,
                normalizer: function (value) {
                    return $.trim(value);
                }
            },
            cont_message: {
                required: true,
                normalizer: function (value) {
                    return $.trim(value);
                }
            },
        },
        messages: {
            cont_name: {
                required: "Name is Required",
                maxlength: "Maximum 20",
                minlength: "Minimum 3",
            },
            cont_email: {
                required: "Email is Required",
                maxlength: "Maximum 20",
                minlength: "Minimum 3",
            },
            cont_subject: {
                required: "Subject is Required",
            },
            cont_message: {
                required: "Message is Required",
            },
        }
    });
    $("#sendBtn").click(function () {
            if ($("#formData").valid()) {
                    $.ajax({
                        type: "post",
                        url: '@Url.Action("Contact", "Home")',
                        data: $("#formData").serialize(),
                        })
                        .done(function (response) {
                        if (response.Success) {
                            swal("Thank You", "Form has been Submitted.", "success").then((value) => {
                        window.location = '@Url.Action("Index", "Home")';
                        });
                        }
                        else {
                        swal("Error", "Unable To Submit Form.", "warning");
                        }
                        })
                        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                        alert("FAIL");
                        });
            }
        })
</script>